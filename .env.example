# Database
DATABASE_URL=file:./dev.db

# ============================================
# Trading Mode
# ============================================
PAPER_MODE=true                              # true = 시뮬레이션 (권장), false = 실제 거래
EXCHANGE=hyperliquid                          # hyperliquid | binance

# ============================================
# Hyperliquid
# ============================================
HYPERLIQUID_PRIVATE_KEY=0x...                # 거래 실행용 private key
HYPERLIQUID_WALLET_ADDRESS=0x...             # 지갑 주소
HYPERLIQUID_TESTNET=true                     # true = testnet, false = mainnet

# ============================================
# Binance Futures (선택)
# ============================================
BINANCE_API_KEY=                             # Binance API Key
BINANCE_SECRET_KEY=                          # Binance API Secret
BINANCE_TESTNET=true                         # true = testnet, false = mainnet

# ============================================
# AI
# ============================================
OPENAI_API_KEY=sk-...                        # OpenAI API key

# ============================================
# Telegram Notifications (선택)
# ============================================
TELEGRAM_BOT_TOKEN=                          # Telegram Bot Token (@BotFather에서 발급)
TELEGRAM_CHAT_ID=                            # 알림 받을 Chat ID

# ============================================
# Optional
# ============================================
SERPAPI_KEY=                                 # Google Trends (옵션)
PORT=3000                                    # 서버 포트
NODE_ENV=development                         # development | production
